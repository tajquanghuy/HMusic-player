<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pigllet.hmusicplayer">

    <uses-permission android:name="com.android.vending.BILLING" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/play"
        android:label="@string/app_name"
        android:roundIcon="@drawable/play"
        android:supportsRtl="true"
        android:theme="@style/NoActionBarTheme"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".musicplayer.songList.SongListActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name=".musicplayer.playSong.PlaySongActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".musicplayer.iap.activities.BuyCoinActivity"
            android:exported="true" />
        <activity
            android:name=".musicplayer.iap.activities.Subscriptions"
            android:exported="true" />
        <activity
            android:name=".musicplayer.iap.activities.IAPActivity"
            android:exported="true" />

        <service
            android:name=".musicplayer.player.PlayerService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>